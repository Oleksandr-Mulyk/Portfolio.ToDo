@if (TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" @onclick="() => SetPage(CurrentPage - 1)" role="button">Previous</a>
            </li>
            @for (int i = 1; i <= TotalPages; i++)
            {
                var pageIndex = i;
                <li class="page-item @(CurrentPage == i ? "active" : "")">
                    <a class="page-link" @onclick="() => SetPage(pageIndex)" role="button">@i</a>
                </li>
            }
            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                <a class="page-link" @onclick="() => SetPage(CurrentPage + 1)" role="button">Next</a>
            </li>
        </ul>
    </nav>
}